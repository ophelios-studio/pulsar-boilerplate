{
  "name": "ophelios/pulsar-boilerplate",
  "description": "Template project for Zephyrus Pulsar.",
  "license": "MIT",
  "authors": [
    {
      "name": "David Tucker",
      "email": "david.tucker@ophelios.com"
    }
  ],
  "repositories": [
    {
      "type": "vcs",
      "url":  "https://github.com/ophelios-studio/pulsar-components.git"
    },
    {
      "type": "vcs",
      "url":  "https://github.com/ophelios-studio/pulsar-oauth-github.git"
    },
    {
      "type": "vcs",
      "url":  "https://github.com/ophelios-studio/pulsar-oauth-x.git"
    },
    {
      "type": "vcs",
      "url":  "https://github.com/ophelios-studio/pulsar-forms.git"
    },
    {
      "type": "vcs",
      "url":  "https://github.com/ophelios-studio/pulsar-mailer.git"
    },
    {
      "type": "vcs",
      "url":  "https://github.com/ophelios-studio/pulsar-account.git"
    }
  ],
  "minimum-stability": "dev",
  "prefer-stable": true,
  "require": {
    "php": ">=8.4",
    "ophelios/zephyrus": "dev-main",
    "ophelios/pulsar-components": "dev-main",
    "ophelios/pulsar-oauth-github": "dev-main",
    "ophelios/pulsar-forms": "dev-main",
    "ophelios/pulsar-mailer": "dev-main",
    "ophelios/pulsar-account": "dev-main",
    "ext-json": "*",
    "ext-fileinfo": "*",
    "ext-zip": "*",
    "ext-posix": "*",
    "ext-curl": "*",
    "ext-intl": "*",
    "ext-ssh2": "*",
    "ext-gd": "*",
    "ext-libxml": "*",
    "ext-dom": "*",
    "composer/composer": "^2.0"
  },
  "require-dev": {
    "phpunit/phpunit": "10.*",
    "tracy/tracy": "^2.10"
  },
  "autoload": {
    "psr-4": {
      "Models\\": "app/Models",
      "Controllers\\": "app/Controllers",
      "Scripts\\": "scripts"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\": "tests"
    }
  },
  "scripts": {
    "publish": "Scripts\\Publisher::publish",
    "post-install-cmd": [
      "Scripts\\Publisher::publish"
    ],
    "post-update-cmd": [
      "Scripts\\Publisher::publish"
    ],
    "test": "vendor/bin/phpunit --stderr",
    "latte-cache": "XDEBUG_MODE=off php bin/latte_cache",
    "xdebug-enable": "bash bin/docker-xdebug.sh enable webserver",
    "xdebug-disable": "bash bin/docker-xdebug.sh disable webserver"
  },
  "config": {
    "allow-plugins": {
      "nodejs-php-fallback/nodejs-php-fallback": true
    }
  }
}
